{
    "name":        "hostnet/css-sniffer",
    "description": "CSS sniffer",
    "license":     "MIT",
    "require": {
        "php":                      ">=7.1",
        "symfony/console":          "^3.3||^4.0",
        "yannickl88/css-tokenizer": "^1.1.1"
    },
    "require-dev": {
        "hostnet/phpcs-tool": "^5.2",
        "phpunit/phpunit":    "^7.0.0"
    },
    "autoload": {
        "psr-4": {
            "Hostnet\\Component\\CssSniff\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hostnet\\Component\\CssSniff\\": "test/"
        }
    },
    "bin": [
        "bin/css-sniff"
    ],
    "archive": {
        "exclude": [
            "/test"
        ]
    }
}
